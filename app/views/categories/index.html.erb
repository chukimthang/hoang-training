<div class="col-md-12">
  <div class="container">
    <h2 align="center">Listing Category</h2>
    
    <%= render partial: "shared/messages" %>

    <table class="table">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>

    <div align="center">
      <%= paginate @categories, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
